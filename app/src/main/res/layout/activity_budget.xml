<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Budget">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="56dp">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report"
                android:textSize="22sp"
                android:textColor="#3B3939"
                android:fontFamily="@font/roboto_condensed_bold"
                android:layout_marginLeft="45dp"
                android:layout_marginBottom="8dp"/>

            <!-- Button Group -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleGroup"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/transparent"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:checkedButton="@id/btnExpense">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExpense"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Expense"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_condensed_bold"
                    style="@style/RoundedRightButton"
                    app:backgroundTint="#F2E6E6"
                    app:strokeWidth="0dp"
                    android:elevation="0dp"
                    app:rippleColor="@android:color/transparent" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBudget"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Budget"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    style="@style/RoundedLeftButton"
                    app:backgroundTint="#0074C7"
                    app:strokeWidth="0dp"
                    app:iconGravity="textStart"
                    app:rippleColor="@android:color/transparent"
                    android:elevation="0dp"
                    app:iconTint="@android:color/white" />
            </com.google.android.material.button.MaterialButtonToggleGroup>


            <!-- Image Button -->
            <com.google.android.material.button.MaterialButton
                android:background="@drawable/bg_this_month_button"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="This Month"
                android:layout_marginTop="32dp"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                android:id="@+id/this_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:drawableRight="@drawable/down_arrow"
                android:drawablePadding="8dp" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:background="@android:color/transparent"
                app:cardBackgroundColor="#E7ECEF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Left Half: Text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Budget"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$12345"
                            android:id="@+id/totalbudget"
                            android:textSize="20dp"
                            android:textColor="#3F57A0"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/budget_image" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart1"
                android:layout_width="290dp"
                android:layout_height="250dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/expene_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_horizontal"
                android:text="Expense : $10000"
                android:textColor="#000000"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_details"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:gravity="center"
                    android:id="@+id/budget_details_button_"
                    android:layout_marginBottom="40dp"
                    android:text="Budget Detail"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:drawablePadding="8dp"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#F9F6FE"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="@color/nav_item_color"
        app:itemIconTint="@color/nav_item_color"
        app:labelVisibilityMode="labeled"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
