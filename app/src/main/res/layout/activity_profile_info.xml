<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".ProfileInfo">

    <!-- Wave background image at the top -->
    <ImageView
        android:id="@+id/waveImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:background="#F9F6FE"
        android:src="@drawable/wave_top" />

    <!-- ScrollView content under the wave -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/waveImage"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="78dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F6FE"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile info"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_gravity="center" />
            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please provide your optional \nProfile Photo"
                android:layout_gravity="center"
                android:textSize="23dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"/>
            <FrameLayout
                android:id="@+id/profile_status_container"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_background"
                android:layout_marginBottom="20dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile_logo"
                    android:layout_gravity="center"
                    app:civ_border_width="0dp"
                    app:civ_border_color="@android:color/transparent"
                    android:contentDescription="Profile Image" />

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="-4dp">

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/yellow_circle" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:id="@+id/add_image"
                        android:src="@drawable/add_butt"
                        android:scaleType="centerInside" />
                </FrameLayout>
            </FrameLayout>
            <TextView
                android:id="@+id/user_adress_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:text="Address"
                android:textColor="#011D6C"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EditText_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/edit_data_text"
                android:fontFamily="@font/roboto_regular"
                android:text="132 My Street, Kingston, New York"
                android:textColor="#4E4E4E"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/user_phone_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:text="Phone"
                android:textColor="#011D6C"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EditText_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/edit_data_text"
                android:fontFamily="@font/roboto_regular"
                android:text="(212)445-7622"
                android:inputType="number"
                android:textColor="#4E4E4E"
                android:textSize="16sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textAllCaps="false"
                android:id="@+id/profile_info_log_in_button"
                android:background="@drawable/submit_button"
                android:text="Log in"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
