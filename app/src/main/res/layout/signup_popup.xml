<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_top_corners"
        android:orientation="vertical">
    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Get Started Free"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_condensed_bold"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/loginTitle"
        android:text="Create your Account"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"/>
        <LinearLayout
            android:id="@+id/name_fields_container"
            android:layout_marginTop="40dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="33dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- First Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textSize="20dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/EditText_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext"
                    android:padding="12dp"
                    android:hint="First Name"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    android:textColorHint="#7F7F7F"
                    android:textSize="16sp"
                    android:inputType="text" />
                <TextView
                    android:id="@+id/valid_first_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#F00E0E"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <!-- Last Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textSize="20dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/EditText_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext"
                    android:padding="12dp"
                    android:hint="Last Name"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    android:textColorHint="#7F7F7F"
                    android:textSize="16sp"
                    android:inputType="text" />
                <TextView
                    android:id="@+id/valid_last_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#F00E0E"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="33dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/EditText_mail"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext"
                android:padding="12dp"
                android:hint="Enter your email"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#000000"
                android:textColorHint="#7F7F7F"
                android:textSize="16sp"
                android:inputType="textEmailAddress" />
            <TextView
                android:id="@+id/valid_email_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter a valid password"
                android:textColor="#F00E0E"
                android:fontFamily="@font/roboto_condensed_bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/EditText_New_Password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext"
                    android:padding="12dp"
                    android:hint="Password"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    android:textColorHint="#7F7F7F"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:paddingEnd="50dp" />

                <ImageView
                    android:id="@+id/togglePassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_eye_closed"
                    android:contentDescription="Toggle Password Visibility" />
            </RelativeLayout>

            <TextView
                android:id="@+id/valid_pass_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter a valid password"
                android:textColor="#F00E0E"
                android:fontFamily="@font/roboto_condensed_bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/EditText_Confirm_Password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext"
                    android:padding="12dp"
                    android:hint="Confirm Password"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    android:textColorHint="#7F7F7F"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:paddingEnd="50dp" />

                <ImageView
                    android:id="@+id/toggleConfirmPassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_eye_closed"
                    android:contentDescription="Toggle Confirm Password Visibility" />
            </RelativeLayout>
            <com.google.android.material.button.MaterialButton
                android:background="@drawable/gradient_button_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="Sign Up"
                android:layout_marginTop="32dp"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:drawablePadding="8dp" />
            <TextView
                android:id="@+id/All_ready_have_account"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>