<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_top_corners"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_view_Forgot_Password"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:layout_below="@id/linear_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="25dp"
                    android:text="Forgot your password ?"/>
                <ImageView
                    android:id="@+id/image_forgot"
                    android:layout_marginTop="20dp"
                    android:layout_width="212dp"
                    android:layout_height="223dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter your email to reset"
                    android:gravity="center"
                    android:id="@+id/enter_forgot"
                    android:textSize="13dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#6A6B6B"/>
                <TextView
                    android:layout_below="@id/Enter"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="33dp"
                    android:id="@+id/text_view_Email"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Email Address"/>
                <EditText
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:layout_marginTop="22dp"
                    android:layout_below="@id/text_view_Email"
                    android:id="@+id/EditText_Forgot_Email"
                    android:textAlignment="gravity"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext"
                    android:padding="12dp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Enter your email"
                    android:textColor="#000000"
                    android:textColorHint="#7F7F7F"
                    android:textSize="16sp"
                    android:inputType="text" />
                <com.google.android.material.button.MaterialButton
                    android:background="@drawable/gradient_button_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:text="Send"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@null"
                    android:id="@+id/send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:drawablePadding="8dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>