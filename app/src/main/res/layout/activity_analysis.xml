<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Analysis">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="56dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="61dp"
                android:layout_marginLeft="61dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analysis"
                android:id="@+id/analysis_tv"
                android:textSize="21dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textColor="#3B3939"/>
            <LinearLayout
                android:id="@+id/anLinear"
                android:layout_marginTop="109dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    app:backgroundTint="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="44dp"
                    android:layout_margin="9dp"
                    android:text="Daily"
                    android:id="@+id/daily_tv"
                    android:background="@drawable/rounded_rectangle"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:fontFamily="@font/roboto_condensed_bold"/>
                <com.google.android.material.button.MaterialButton
                    app:backgroundTint="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="44dp"
                    android:layout_margin="9dp"
                    android:id="@+id/weekly_tv"
                    android:text="Weekly"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/rounded_rectangle"
                    android:textSize="16dp"
                    android:fontFamily="@font/roboto_condensed_bold"/>
                <com.google.android.material.button.MaterialButton
                    app:backgroundTint="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="44dp"
                    android:layout_margin="9dp"
                    android:gravity="center"
                    android:id="@+id/monthly_tv"
                    android:text="Monthly"
                    android:textColor="#000000"
                    android:background="@drawable/rounded_rectangle"
                    android:textSize="16dp"
                    android:fontFamily="@font/roboto_condensed_bold"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/calendarHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="172dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp">
                <ImageButton
                    android:id="@+id/btn_prev_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/chevron_left_"
                    android:contentDescription="Previous Month" />
                <TextView
                    android:id="@+id/tv_month_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="April 2025"
                    android:textColor="#5C5C5C"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp" />

                <ImageButton
                    android:id="@+id/btn_next_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/chevron_right_"
                    android:contentDescription="Next Month" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="232dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/aalysis_rounded_border_background"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:id="@+id/statistic_textview"
                                android:text="Monthly Statistic"
                                android:textSize="18dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="#544F56"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_margin="10dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:text="Budget"
                                android:textSize="16dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="#544F56"/>
                            <TextView
                                android:layout_margin="10dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Expense"
                                android:gravity="center_horizontal"
                                android:textSize="16dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="#544F56"/>
                            <TextView
                                android:layout_margin="10dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Balance"
                                android:gravity="center_horizontal"
                                android:textSize="16dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="#544F56"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_margin="10dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:id="@+id/budget_tv"
                                android:text="12345"
                                android:textSize="14dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="#544F56"/>
                            <TextView
                                android:layout_margin="10dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="10000"
                                android:id="@+id/expense_tv"
                                android:gravity="center_horizontal"
                                android:textSize="14dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="#544F56"/>
                            <TextView
                                android:layout_margin="10dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="2345"
                                android:id="@+id/balance_tv"
                                android:gravity="center_horizontal"
                                android:textSize="14dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="#544F56"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="455dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:background="#E7ECEF">
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="16dp" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_Analy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#F9F6FE"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="@color/nav_item_color"
        app:itemIconTint="@color/nav_item_color"
        app:labelVisibilityMode="labeled"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>