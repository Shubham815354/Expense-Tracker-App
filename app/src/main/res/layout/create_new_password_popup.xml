<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/card_top_corners"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_view_Create_New_Password"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:layout_below="@id/linear_layout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/lato_bold"
                android:textSize="25dp"
                android:text="Create New Password"/>
                <ImageView
                    android:layout_width="266dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/lock_gif"/>
            <TextView
                android:id="@+id/Enter"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#6A6B6B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter new password"/>
            <TextView
                android:layout_below="@id/Enter"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textSize="20dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:id="@+id/text_view_Email"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="New Password"/>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <EditText
                    android:id="@+id/EditText_Password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext"
                    android:paddingEnd="48dp"
                    android:paddingStart="12dp"
                    android:hint="Create Password"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    android:textColorHint="#7F7F7F"
                    android:textSize="16sp"
                    android:inputType="textPassword" />
                <ImageView
                    android:id="@+id/eyeImageView"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_eye_closed"
                    android:contentDescription="Toggle Password Visibility" />
            </RelativeLayout>
            <TextView
                android:layout_below="@id/EditText_Forgot_Email"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textSize="20dp"
                android:id="@+id/text_view_Password"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Confirm Password"/>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <EditText
                    android:id="@+id/EditText_Password_match"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext"
                    android:paddingEnd="48dp"
                    android:paddingStart="12dp"
                    android:hint="Confirm Password"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    android:textColorHint="#7F7F7F"
                    android:textSize="16sp"
                    android:inputType="textPassword" />
                <ImageView
                    android:id="@+id/eyeImageView_match"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_eye_closed"
                    android:contentDescription="Toggle Password Visibility" />

            </RelativeLayout>
            <com.google.android.material.button.MaterialButton
                android:background="@drawable/gradient_button_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="Save"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                android:id="@+id/save_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:drawablePadding="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>


</ScrollView>