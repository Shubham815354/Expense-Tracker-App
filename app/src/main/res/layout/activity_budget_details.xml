<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F6FE"
    tools:context=".BudgetDetails">

    <!-- Top Icon -->


    <ScrollView
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">
            <TextView
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:text="Budget Detail"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textSize="21dp"
                android:textColor="#3B3939"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="#F9F6FE" />

            <!-- Top Buttons inside scroll -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_select_month_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This Month"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:background="@drawable/gradient_button_bg"
                        app:backgroundTint="@null"
                        android:drawableRight="@drawable/down_arrow"
                        android:drawablePadding="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_select_freq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frequency"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:background="@drawable/gradient_button_bg"
                        app:backgroundTint="@null"
                        android:drawableRight="@drawable/down_arrow"
                        android:drawablePadding="8dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="60dp"
                android:paddingBottom="16dp">

                <!-- Chart and Budget Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- PieChart -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pieChart2"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <!-- Text Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_gravity="center_vertical">
                        <!-- Budget Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Budget:"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_regular" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="$1200"
                                android:id="@+id/budgetsum"
                                android:textSize="16sp"
                                android:gravity="end"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>

                        <!-- Spent Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Expenses:"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_regular" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/expense_detail"
                                android:text="$543"
                                android:textSize="16sp"
                                android:gravity="end"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>

                        <!-- Divider Line -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/budget_details_line" />

                        <!-- Remaining Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Remaining:"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_regular" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:id="@+id/remaining"
                                android:gravity="end"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!-- RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/budget_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp" />

                <!-- Button Below RecyclerView -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/budget_details_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/gradient_button_bg"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="Add Budget"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:drawablePadding="8dp"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_re_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#F9F6FE"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="@color/nav_item_color"
        app:itemIconTint="@color/nav_item_color"
        app:labelVisibilityMode="labeled" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
