<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transaction">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="56dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="63dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Good Morning"
                    android:id="@+id/greeting_transaction"
                    android:textSize="14dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="John Doe"
                    android:id="@+id/name_transaction"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#000000"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/setting_trans"
                        android:layout_gravity="end"
                        android:layout_marginEnd="25dp"
                        android:src="@drawable/settingpic"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="123dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/transaction_rounded_rectangle"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Budget"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:fontFamily="@font/poppins_bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="55900"
                        android:id="@+id/transaction_budget_textview"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:fontFamily="@font/poppins_bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/transaction_rounded_rectangle_two"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Expenses"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="$40400"
                        android:id="@+id/transaction_expense_textview"
                        android:gravity="center"
                        android:textSize="22dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_bold"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="217dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Analysis"
                android:textSize="18dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#000000"/>
            <LinearLayout
                android:id="@+id/trans_linear_month"
                android:layout_marginTop="222dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:background="@drawable/gradient_button_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:layout_margin="15dp"
                    android:layout_gravity="center_horizontal"
                    android:text="This Month"
                    android:layout_marginTop="32dp"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@null"
                    android:id="@+id/this_month_transaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:drawableRight="@drawable/down_arrow"
                    android:drawablePadding="8dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_bar"
                android:layout_margin="10dp"
                android:layout_below="@id/trans_linear_month"
                android:orientation="vertical">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/linear_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rec_linear"
                android:layout_margin="0dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transactions"
                    android:id="@+id/transaction"
                    android:layout_marginTop="20dp"
                    android:textSize="18dp"
                    android:layout_marginLeft="16dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:id="@+id/transaction_recycler_view"
                    android:layout_marginBottom="56dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/rec_linear"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"/>

        </RelativeLayout>

    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_Analysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#F9F6FE"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="@color/nav_item_color"
        app:itemIconTint="@color/nav_item_color"
        app:labelVisibilityMode="labeled"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>