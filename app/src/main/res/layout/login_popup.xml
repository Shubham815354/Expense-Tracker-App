<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/card_top_corners"
               android:orientation="vertical">
               <TextView
                   android:layout_marginTop="40dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="Welcome Back"
                   android:textSize="24dp"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:fontFamily="@font/roboto_condensed_bold"/>
               <TextView
                   android:layout_marginTop="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:id="@+id/loginTitle"
                   android:text="Login to your Account"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:fontFamily="@font/poppins_bold"/>
               <LinearLayout
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="33dp"
                   android:layout_marginRight="33dp"
                   android:layout_below="@id/loginTitle"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Email"
                       android:textStyle="bold"
                       android:fontFamily="@font/roboto_condensed_bold"
                       android:textSize="16dp"
                       android:textColor="@color/black"/>
                   <EditText
                       android:layout_marginTop="15dp"
                       android:id="@+id/EditText_Email"
                       android:layout_width="match_parent"
                       android:layout_height="48dp"
                       android:background="@drawable/edittext"
                       android:padding="12dp"
                       android:fontFamily="@font/poppins_regular"
                       android:hint="Enter your email"
                       android:textColor="#000000"
                       android:textColorHint="#7F7F7F"
                       android:textSize="16sp"
                       android:inputType="text" />
                   <TextView
                       android:id="@+id/valid_mail_view"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Enter a valid mail"
                       android:textColor="#F00E0E"
                       android:fontFamily="@font/roboto_condensed_bold"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="5dp"/>
                   <TextView
                       android:layout_marginTop="20dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Password"
                       android:fontFamily="@font/roboto_condensed_bold"
                       android:textStyle="bold"
                       android:textSize="16dp"
                       android:textColor="@color/black"/>
                   <RelativeLayout
                       android:layout_marginTop="15dp"
                       android:layout_width="match_parent"
                       android:layout_height="48dp">

                       <EditText
                           android:id="@+id/EditText_Password"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:background="@drawable/edittext"
                           android:paddingEnd="48dp"
                           android:paddingStart="12dp"
                           android:hint="Password"
                           android:fontFamily="@font/poppins_regular"
                           android:textColor="#000000"
                           android:textColorHint="#7F7F7F"
                           android:textSize="16sp"
                           android:inputType="textPassword" />

                       <ImageView
                           android:id="@+id/eyeImageView"
                           android:layout_width="24dp"
                           android:layout_height="24dp"
                           android:layout_alignParentEnd="true"
                           android:layout_centerVertical="true"
                           android:layout_marginEnd="12dp"
                           android:src="@drawable/ic_eye_closed"
                           android:contentDescription="Toggle Password Visibility" />
                   </RelativeLayout>
                   <TextView
                       android:id="@+id/valid_password_view"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Enter a valid Password"
                       android:textColor="#F00E0E"
                       android:fontFamily="@font/roboto_condensed_bold"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="5dp"/>
                   <TextView
                       android:layout_marginTop="0dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Forgot Password ?"
                       android:id="@+id/Edit_Text_forgot_password"
                       android:layout_gravity="end"
                       android:fontFamily="@font/roboto_condensed_bold"
                       android:textSize="15dp"
                       android:textStyle="bold"
                       android:textColor="@color/forgot_password_login" />
                   <CheckBox
                       android:id="@+id/checkbox_remember"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Remember Me"
                       android:layout_marginTop="0dp"
                       android:textSize="14sp"
                       android:fontFamily="@font/poppins_regular"
                       android:textColor="@color/black"/>
                   <com.google.android.material.button.MaterialButton
                       android:background="@drawable/gradient_button_bg"
                       android:paddingStart="16dp"
                       android:paddingEnd="16dp"
                       android:gravity="center"
                       android:layout_gravity="center_horizontal"
                       android:text="Log IN"
                       android:layout_marginTop="32dp"
                       android:textColor="#FFFFFF"
                       app:backgroundTint="@null"
                       android:id="@+id/log_in"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="16sp"
                       android:drawablePadding="8dp" />
                   <TextView
                       android:id="@+id/do_not_have_account"
                       android:layout_marginTop="60dp"
                       android:fontFamily="@font/poppins_regular"
                       android:layout_gravity="center_horizontal"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="15sp" />
               </LinearLayout>

           </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>