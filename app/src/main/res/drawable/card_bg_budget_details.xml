<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:right="0dp" android:left="0dp" android:top="4dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000"/> <!-- semi-transparent black -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Main card background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F6F9FE"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
